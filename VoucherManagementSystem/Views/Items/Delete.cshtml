@* FIXED Views/Items/Delete.cshtml *@
@model VoucherManagementSystem.Models.Item
@{
    ViewData["Title"] = "Delete Item";
}

<h2><i class="bi bi-trash"></i> Delete Item</h2>

<div class="alert alert-danger">
    <h4><i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this item?</h4>
    <p>This action will deactivate the item. Associated vouchers will be preserved.</p>
    @if (Model.CurrentStock > 0)
    {
        <p class="mb-0"><strong>Warning:</strong> This item has @string.Format("{0:N2}", Model.CurrentStock) units in stock!</p>
    }
</div>

<div class="card">
    <div class="card-body">
        <h5>Item Details</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Unit:</dt>
            <dd class="col-sm-9">@(Model.Unit ?? "N/A")</dd>

            <dt class="col-sm-3">Default Rate:</dt>
            <dd class="col-sm-9">Rs. @string.Format("{0:N0}", Model.DefaultRate)</dd>

            <dt class="col-sm-3">Current Stock:</dt>
            <dd class="col-sm-9">
                @if (Model.StockTrackingEnabled)
                {
                    <span class="@(Model.CurrentStock < 10 ? "text-danger fw-bold" : "")">
                        @string.Format("{0:N2}", Model.CurrentStock) @Model.Unit
                    </span>
                }
                else
                {
                    <span class="text-muted">Stock tracking disabled</span>
                }
            </dd>

            <dt class="col-sm-3">Stock Tracking:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.StockTrackingEnabled ? "success" : "secondary")">
                    @(Model.StockTrackingEnabled ? "Enabled" : "Disabled")
                </span>
            </dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                    @(Model.IsActive ? "Active" : "Inactive")
                </span>
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>