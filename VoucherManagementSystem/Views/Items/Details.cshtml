@* Views/Items/Details.cshtml *@
@model VoucherManagementSystem.Models.Item
@{
    ViewData["Title"] = "Item Details";
}

<h2><i class="bi bi-box-seam"></i> Item Details</h2>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5>@Model.Name</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Unit:</dt>
            <dd class="col-sm-9">@Model.Unit</dd>

            <dt class="col-sm-3">Default Rate:</dt>
            <dd class="col-sm-9">@string.Format("{0:N0}", Model.DefaultRate)</dd>

            <dt class="col-sm-3">Current Stock:</dt>
            <dd class="col-sm-9">
                @if (Model.StockTrackingEnabled)
                {
                    @string.Format("{0:N3}", Model.CurrentStock) @Model.Unit
                }
                else
                {
                    <span class="text-muted">Stock tracking disabled</span>
                }
            </dd>

            <dt class="col-sm-3">Stock Tracking:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.StockTrackingEnabled ? "success" : "secondary")">
                    @(Model.StockTrackingEnabled ? "Enabled" : "Disabled")
                </span>
            </dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                    @(Model.IsActive ? "Active" : "Inactive")
                </span>
            </dd>

            <dt class="col-sm-3">Created Date:</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("dd-MMM-yyyy")</dd>
        </dl>

        <hr />

        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>