@{
    ViewData["Title"] = "Page Locked";
    var pageName = ViewData["PageName"]?.ToString() ?? "This Page";
    var pageUrl = ViewData["PageUrl"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Voucher Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h4 class="mb-0 text-center">
                            <i class="bi bi-shield-lock-fill"></i> Page Locked
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>Access Denied!</strong> This page is protected and requires a password.
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <strong>Locked Page:</strong> <span class="text-primary">@pageName</span>
                            </label>
                        </div>

                        <form id="unlockForm">
                            <div class="mb-4">
                                <label for="pagePassword" class="form-label">
                                    <strong>Enter Password</strong>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-key-fill"></i>
                                    </span>
                                    <input type="password"
                                           class="form-control form-control-lg"
                                           id="pagePassword"
                                           placeholder="Enter password to unlock"
                                           required
                                           autofocus>
                                </div>
                                <div id="errorMessage" class="text-danger mt-2" style="display:none;"></div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg" id="unlockBtn">
                                    <i class="bi bi-unlock-fill"></i> Unlock Page
                                </button>
                                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                                </a>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-muted text-center">
                        <small><i class="bi bi-info-circle"></i> Contact your administrator if you need access</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            var pageUrl = '@pageUrl';

            $('#unlockForm').on('submit', function(e) {
                e.preventDefault();

                var password = $('#pagePassword').val();

                if (!password) {
                    $('#errorMessage').text('Please enter a password').show();
                    return;
                }

                $('#unlockBtn').prop('disabled', true).html('<i class="bi bi-hourglass-split"></i> Verifying...');
                $('#errorMessage').hide();

                $.ajax({
                    url: '@Url.Action("VerifyPassword", "PageLock")',
                    type: 'POST',
                    data: {
                        pageUrl: pageUrl,
                        password: password
                    },
                    success: function(response) {
                        if (response.success) {
                            // Password correct - redirect to the page
                            window.location.href = pageUrl;
                        } else {
                            $('#errorMessage').text(response.message || 'Incorrect password. Please try again.').show();
                            $('#pagePassword').val('').focus();
                            $('#unlockBtn').prop('disabled', false).html('<i class="bi bi-unlock-fill"></i> Unlock Page');
                        }
                    },
                    error: function() {
                        $('#errorMessage').text('Error verifying password. Please try again.').show();
                        $('#unlockBtn').prop('disabled', false).html('<i class="bi bi-unlock-fill"></i> Unlock Page');
                    }
                });
            });

            // Enter key to submit
            $('#pagePassword').on('keypress', function(e) {
                if (e.which === 13) {
                    e.preventDefault();
                    $('#unlockForm').submit();
                }
            });
        });
    </script>
</body>
</html>
