@* Views/Reports/StockTrackReport.cshtml - Stock Track Report *@
@{
    ViewData["Title"] = "Stock Track Report";
    var transactions = ViewBag.Transactions as IEnumerable<VoucherManagementSystem.Models.Voucher>;
    var fromDate = (DateTime)ViewBag.FromDate;
    var toDate = (DateTime)ViewBag.ToDate;
}

<div class="d-print-none">
    <h2><i class="bi bi-box-seam"></i> Stock Track Report</h2>
    <p class="text-muted">Track which customer purchased/sold items and when</p>
</div>

<!-- Filter Form -->
<div class="card mb-3 d-print-none">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-filter"></i> Filter Options</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-2">
                <label class="form-label">From Date</label>
                <input type="date" name="fromDate" value="@fromDate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="form-label">To Date</label>
                <input type="date" name="toDate" value="@toDate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Filter by Item</label>
                @Html.DropDownList("itemId", ViewBag.Items as SelectList, "-- All Items --", new { @class = "form-select" })
            </div>
            <div class="col-md-3">
                <label class="form-label">Filter by Customer</label>
                @Html.DropDownList("customerId", ViewBag.Customers as SelectList, "-- All Customers --", new { @class = "form-select" })
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Generate
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-3">
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h6>Total Transactions</h6>
                <h4>@(transactions?.Count() ?? 0)</h4>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h6>Total Purchases</h6>
                <h4>@(transactions?.Where(t => t.VoucherType == VoucherManagementSystem.Models.VoucherType.Purchase).Count() ?? 0)</h4>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark">
            <div class="card-body text-center">
                <h6>Total Sales</h6>
                <h4>@(transactions?.Where(t => t.VoucherType == VoucherManagementSystem.Models.VoucherType.Sale).Count() ?? 0)</h4>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h6>Total Quantity</h6>
                <h4>@string.Format("{0:N2}", transactions?.Sum(t => t.Quantity) ?? 0)</h4>
            </div>
        </div>
    </div>
</div>

<!-- Transactions Table -->
<div class="card shadow-sm">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Stock Transactions (@fromDate.ToString("dd-MMM-yyyy") to @toDate.ToString("dd-MMM-yyyy"))</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-bordered mb-0" id="stockTrackTable">
                <thead class="table-primary">
                    <tr>
                        <th class="fw-bold" style="font-size: 14px;">Date</th>
                        <th class="fw-bold" style="font-size: 14px;">Transaction No</th>
                        <th class="fw-bold" style="font-size: 14px;">Type</th>
                        <th class="fw-bold" style="font-size: 14px;">Item</th>
                        <th class="fw-bold" style="font-size: 14px;">Customer</th>
                        <th class="fw-bold" style="font-size: 14px;">Project</th>
                        <th class="text-end fw-bold" style="font-size: 14px;">Quantity</th>
                        <th class="text-end fw-bold" style="font-size: 14px;">Rate</th>
                        <th class="text-end fw-bold" style="font-size: 14px;">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @if (transactions != null && transactions.Any())
                    {
                        foreach (var t in transactions)
                        {
                            var isPurchase = t.VoucherType == VoucherManagementSystem.Models.VoucherType.Purchase;
                            var customer = isPurchase ? t.PurchasingCustomer?.Name ?? t.PurchasingCustomerDetails : t.ReceivingCustomer?.Name ?? t.ReceivingCustomerDetails;
                            <tr style="font-size: 13px;">
                                <td class="align-middle">@t.VoucherDate.ToString("dd-MMM-yy")</td>
                                <td class="align-middle">
                                    <a asp-controller="Vouchers" asp-action="Details" asp-route-id="@t.Id">@t.TransactionNumber</a>
                                </td>
                                <td class="align-middle">
                                    <span class="badge bg-@(isPurchase ? "success" : "warning")" style="font-size: 11px;">@t.VoucherType</span>
                                </td>
                                <td class="align-middle">@t.Item?.Name</td>
                                <td class="align-middle">
                                    @{
                                        var custId = isPurchase ? t.PurchasingCustomerId : t.ReceivingCustomerId;
                                    }
                                    @if (custId.HasValue)
                                    {
                                        <a asp-controller="Reports" asp-action="CustomerLedger" asp-route-customerId="@custId">@customer</a>
                                    }
                                    else
                                    {
                                        @customer
                                    }
                                </td>
                                <td class="align-middle">@t.Project?.Name</td>
                                <td class="text-end align-middle fw-semibold @(isPurchase ? "text-success" : "text-danger")">
                                    @(isPurchase ? "+" : "-")@string.Format("{0:N2}", t.Quantity)
                                </td>
                                <td class="text-end align-middle">@string.Format("{0:N2}", t.Rate)</td>
                                <td class="text-end align-middle fw-semibold">Rs. @string.Format("{0:N0}", t.Amount)</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4 fst-italic">
                                <i class="bi bi-info-circle"></i> No transactions found for the selected criteria.
                            </td>
                        </tr>
                    }
                </tbody>
                @if (transactions != null && transactions.Any())
                {
                    <tfoot class="table-success">
                        <tr style="font-size: 15px;">
                            <th colspan="6" class="text-end fw-bold py-3">TOTAL:</th>
                            <th class="text-end fw-bold py-3">@string.Format("{0:N2}", transactions.Sum(t => t.Quantity))</th>
                            <th></th>
                            <th class="text-end fw-bold py-3 text-success">Rs. @string.Format("{0:N0}", transactions.Sum(t => t.Amount))</th>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>
    </div>
</div>

<div class="mt-3 d-print-none">
    <button onclick="window.print()" class="btn btn-primary">
        <i class="bi bi-printer"></i> Print
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Reports
    </a>
</div>

@section Scripts {
    <style>
        /* Enhanced table styling */
        #stockTrackTable thead th {
            position: sticky;
            top: 0;
            z-index: 10;
            background-color: #cfe2ff !important;
            border-bottom: 2px solid #0d6efd;
            padding: 12px 8px;
        }

        #stockTrackTable tbody tr:hover {
            background-color: #f8f9fa;
        }

        #stockTrackTable {
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .table-responsive {
            max-height: 600px;
            overflow-y: auto;
        }

        /* Custom scrollbar */
        .table-responsive::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        .table-responsive::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .table-responsive::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 4px;
        }

        .table-responsive::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

        @@media print {
            .card {
                page-break-inside: avoid;
            }

            .table {
                font-size: 10pt;
            }

            .table-responsive {
                max-height: none;
                overflow: visible;
            }

            #stockTrackTable thead th {
                position: relative;
            }
        }
    </style>
}
