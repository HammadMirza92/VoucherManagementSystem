@* Views/Reports/StockTrackReport.cshtml - Stock Track Report *@
@{
    ViewData["Title"] = "Stock Track Report";
    var transactions = ViewBag.Transactions as IEnumerable<VoucherManagementSystem.Models.Voucher>;
    var fromDate = (DateTime)ViewBag.FromDate;
    var toDate = (DateTime)ViewBag.ToDate;
}

<div class="d-print-none">
    <h2><i class="bi bi-box-seam"></i> Stock Track Report</h2>
    <p class="text-muted">Track which customer purchased/sold items and when</p>
</div>

<!-- Filter Form -->
<div class="card mb-3 d-print-none">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-filter"></i> Filter Options</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-2">
                <label class="form-label">From Date</label>
                <input type="date" name="fromDate" value="@fromDate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="form-label">To Date</label>
                <input type="date" name="toDate" value="@toDate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Filter by Item</label>
                @Html.DropDownList("itemId", ViewBag.Items as SelectList, "-- All Items --", new { @class = "form-select" })
            </div>
            <div class="col-md-3">
                <label class="form-label">Filter by Customer</label>
                @Html.DropDownList("customerId", ViewBag.Customers as SelectList, "-- All Customers --", new { @class = "form-select" })
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Generate
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-3">
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h6>Total Transactions</h6>
                <h4>@(transactions?.Count() ?? 0)</h4>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h6>Total Purchases</h6>
                <h4>@(transactions?.Where(t => t.VoucherType == VoucherManagementSystem.Models.VoucherType.Purchase).Count() ?? 0)</h4>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark">
            <div class="card-body text-center">
                <h6>Total Sales</h6>
                <h4>@(transactions?.Where(t => t.VoucherType == VoucherManagementSystem.Models.VoucherType.Sale).Count() ?? 0)</h4>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h6>Total Quantity</h6>
                <h4>@string.Format("{0:N2}", transactions?.Sum(t => t.Quantity) ?? 0)</h4>
            </div>
        </div>
    </div>
</div>

<!-- Transactions Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Stock Transactions (@fromDate.ToString("dd-MMM-yyyy") to @toDate.ToString("dd-MMM-yyyy"))</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-sm" id="stockTrackTable">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Transaction No</th>
                        <th>Type</th>
                        <th>Item</th>
                        <th>Customer</th>
                        <th>Project</th>
                        <th class="text-end">Quantity</th>
                        <th class="text-end">Rate</th>
                        <th class="text-end">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @if (transactions != null && transactions.Any())
                    {
                        foreach (var t in transactions)
                        {
                            var isPurchase = t.VoucherType == VoucherManagementSystem.Models.VoucherType.Purchase;
                            var customer = isPurchase ? t.PurchasingCustomer?.Name ?? t.PurchasingCustomerDetails : t.ReceivingCustomer?.Name ?? t.ReceivingCustomerDetails;
                            <tr>
                                <td>@t.VoucherDate.ToString("dd-MMM-yy")</td>
                                <td>
                                    <a asp-controller="Vouchers" asp-action="Details" asp-route-id="@t.Id">@t.TransactionNumber</a>
                                </td>
                                <td>
                                    <span class="badge bg-@(isPurchase ? "success" : "warning")">@t.VoucherType</span>
                                </td>
                                <td>@t.Item?.Name</td>
                                <td>
                                    @{
                                        var custId = isPurchase ? t.PurchasingCustomerId : t.ReceivingCustomerId;
                                    }
                                    @if (custId.HasValue)
                                    {
                                        <a asp-controller="Reports" asp-action="CustomerLedger" asp-route-customerId="@custId">@customer</a>
                                    }
                                    else
                                    {
                                        @customer
                                    }
                                </td>
                                <td>@t.Project?.Name</td>
                                <td class="text-end @(isPurchase ? "text-success" : "text-danger")">
                                    @(isPurchase ? "+" : "-")@string.Format("{0:N2}", t.Quantity)
                                </td>
                                <td class="text-end">@string.Format("{0:N2}", t.Rate)</td>
                                <td class="text-end">Rs. @string.Format("{0:N0}", t.Amount)</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center">No transactions found for the selected criteria.</td>
                        </tr>
                    }
                </tbody>
                @if (transactions != null && transactions.Any())
                {
                    <tfoot class="table-dark">
                        <tr>
                            <th colspan="6" class="text-end">Total:</th>
                            <th class="text-end">@string.Format("{0:N2}", transactions.Sum(t => t.Quantity))</th>
                            <th></th>
                            <th class="text-end">Rs. @string.Format("{0:N0}", transactions.Sum(t => t.Amount))</th>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>
    </div>
</div>

<div class="mt-3 d-print-none">
    <button onclick="window.print()" class="btn btn-primary">
        <i class="bi bi-printer"></i> Print
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Reports
    </a>
</div>
