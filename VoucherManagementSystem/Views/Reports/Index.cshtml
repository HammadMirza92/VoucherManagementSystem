@* Views/Reports/Index.cshtml *@
@{
    ViewData["Title"] = "Reports";
}

<h2><i class="bi bi-graph-up"></i> Reports Center</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h5><i class="bi bi-bar-chart"></i> Profit & Loss Report</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Generate profit and loss statements for your projects.</p>
                <form asp-action="ProfitLoss" method="post">
                    <div class="mb-3">
                        <label class="form-label">Select Project <span class="text-danger">*</span></label>
                        @if (ViewBag.Projects != null)
                        {
                            @Html.DropDownList("projectId", ViewBag.Projects as SelectList, "-- Select Project --", new { @class = "form-select", required = "required" })
                        }
                        else
                        {
                            <select class="form-select" disabled>
                                <option>No projects available</option>
                            </select>
                        }
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">From Date <span class="text-danger">*</span></label>
                            <input type="date" name="fromDate" class="form-control" required value="@DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">To Date <span class="text-danger">*</span></label>
                            <input type="date" name="toDate" class="form-control" required value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-file-earmark-text"></i> Generate P&L Report
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header bg-success text-white">
                <h5><i class="bi bi-bank"></i> Bank Statement</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">View detailed bank transaction statements.</p>
                <form asp-action="BankStatement" method="get">
                    <div class="mb-3">
                        <label class="form-label">Select Bank <span class="text-danger">*</span></label>
                        @if (ViewBag.Banks != null)
                        {
                            @Html.DropDownList("bankId", ViewBag.Banks as SelectList, "-- Select Bank --", new { @class = "form-select", required = "required" })
                        }
                        else
                        {
                            <select class="form-select" disabled>
                                <option>No banks available</option>
                            </select>
                        }
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">From Date <span class="text-danger">*</span></label>
                            <input type="date" name="fromDate" class="form-control" required value="@DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">To Date <span class="text-danger">*</span></label>
                            <input type="date" name="toDate" class="form-control" required value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-file-earmark-text"></i> Generate Bank Statement
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header bg-info text-white">
                <h5><i class="bi bi-box-seam"></i> Stock Report</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">View current stock levels and inventory valuation.</p>
                <a asp-action="StockReport" class="btn btn-info w-100">
                    <i class="bi bi-file-earmark-text"></i> View Current Stock Report
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header bg-danger text-white">
                <h5><i class="bi bi-person-lines-fill"></i> Customer Ledger</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">View detailed customer account statements and transaction history.</p>
                <a asp-action="CustomerLedger" class="btn btn-danger w-100">
                    <i class="bi bi-file-earmark-text"></i> View Customer Ledger
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header bg-warning text-white">
                <h5><i class="bi bi-download"></i> Export Reports</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Export data to Excel for further analysis.</p>
                <form asp-action="ExportToExcel" method="get">
                    <div class="mb-3">
                        <label class="form-label">Select Report Type <span class="text-danger">*</span></label>
                        <select name="reportType" class="form-select" required>
                            <option value="">-- Select Report Type --</option>
                            <option value="vouchers">All Vouchers</option>
                            <option value="stock">Stock Report</option>
                            <option value="customers">Customer List</option>
                            <option value="items">Items List</option>
                            <option value="banks">Banks List</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">From Date (Optional)</label>
                            <input type="date" name="fromDate" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">To Date (Optional)</label>
                            <input type="date" name="toDate" class="form-control" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-warning w-100">
                        <i class="bi bi-file-earmark-excel"></i> Export to Excel
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h5><i class="bi bi-clock-history"></i> Quick Statistics</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="p-3 border rounded">
                            <h4 class="text-primary">@ViewBag.TotalVouchers</h4>
                            <p class="mb-0">Total Vouchers</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="p-3 border rounded">
                            <h4 class="text-success">@ViewBag.ActiveProjects</h4>
                            <p class="mb-0">Active Projects</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="p-3 border rounded">
                            <h4 class="text-info">@ViewBag.TotalCustomers</h4>
                            <p class="mb-0">Total Customers</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="p-3 border rounded">
                            <h4 class="text-warning">@ViewBag.TotalItems</h4>
                            <p class="mb-0">Total Items</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>