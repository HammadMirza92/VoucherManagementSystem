@* Views/Reports/AllExpensesReport.cshtml - All Expenses Report *@
@{
    ViewData["Title"] = "All Expenses Report";
    var expenses = ViewBag.Expenses as IEnumerable<VoucherManagementSystem.Models.Voucher>;
    var expenseSummary = ViewBag.ExpenseSummary as IEnumerable<dynamic>;
    var fromDate = (DateTime)ViewBag.FromDate;
    var toDate = (DateTime)ViewBag.ToDate;
    var totalExpenses = (decimal)(ViewBag.TotalExpenses ?? 0);
}

<div class="d-print-none">
    <h2><i class="bi bi-receipt"></i> All Expenses Report</h2>
    <p class="text-muted">View all expenses in one place</p>
</div>

<!-- Filter Form -->
<div class="card mb-3 d-print-none">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0"><i class="bi bi-filter"></i> Filter Options</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">From Date</label>
                <input type="date" name="fromDate" value="@fromDate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">To Date</label>
                <input type="date" name="toDate" value="@toDate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Filter by Expense Head</label>
                @Html.DropDownList("expenseHeadId", ViewBag.ExpenseHeads as SelectList, "-- All Expense Heads --", new { @class = "form-select" })
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-danger w-100">
                    <i class="bi bi-search"></i> Generate
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-3">
    <div class="col-md-4">
        <div class="card bg-danger text-white">
            <div class="card-body text-center">
                <h6>Total Expenses</h6>
                <h3>Rs. @string.Format("{0:N0}", totalExpenses)</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-warning text-dark">
            <div class="card-body text-center">
                <h6>Total Transactions</h6>
                <h3>@(expenses?.Count() ?? 0)</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h6>Expense Heads Used</h6>
                <h3>@(expenseSummary?.Count() ?? 0)</h3>
            </div>
        </div>
    </div>
</div>

<!-- Expense Summary by Head -->
@if (expenseSummary != null && expenseSummary.Any())
{
    <div class="card mb-3">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Expense Summary by Head</h5>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var summary in expenseSummary)
                {
                    var percentage = totalExpenses > 0 ? ((decimal)summary.Total / totalExpenses * 100) : 0;
                    <div class="col-md-4 mb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>@summary.ExpenseHead</span>
                            <span class="badge bg-danger">Rs. @string.Format("{0:N0}", summary.Total)</span>
                        </div>
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar bg-danger" style="width: @percentage%"></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Expenses Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Expense Details (@fromDate.ToString("dd-MMM-yyyy") to @toDate.ToString("dd-MMM-yyyy"))</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-sm" id="expensesTable">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Transaction No</th>
                        <th>Type</th>
                        <th>Expense Head</th>
                        <th>Details</th>
                        <th>Project</th>
                        <th class="text-end">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @if (expenses != null && expenses.Any())
                    {
                        foreach (var e in expenses)
                        {
                            <tr>
                                <td>@e.VoucherDate.ToString("dd-MMM-yy")</td>
                                <td>
                                    <a asp-controller="Vouchers" asp-action="Details" asp-route-id="@e.Id">@e.TransactionNumber</a>
                                </td>
                                <td>
                                    <span class="badge bg-@(e.VoucherType == VoucherManagementSystem.Models.VoucherType.Hazri ? "warning" : "danger")">@e.VoucherType</span>
                                </td>
                                <td>@e.ExpenseHead?.Name</td>
                                <td>@e.ExpenseHeadDetails</td>
                                <td>
                                    @if (e.ProjectId.HasValue)
                                    {
                                        <a asp-controller="Reports" asp-action="ProjectReport" asp-route-projectId="@e.ProjectId">@e.Project?.Name</a>
                                    }
                                </td>
                                <td class="text-end text-danger fw-bold">Rs. @string.Format("{0:N0}", e.Amount)</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No expenses found for the selected criteria.</td>
                        </tr>
                    }
                </tbody>
                @if (expenses != null && expenses.Any())
                {
                    <tfoot class="table-dark">
                        <tr>
                            <th colspan="6" class="text-end">Total:</th>
                            <th class="text-end">Rs. @string.Format("{0:N0}", totalExpenses)</th>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>
    </div>
</div>

<div class="mt-3 d-print-none">
    <button onclick="window.print()" class="btn btn-primary">
        <i class="bi bi-printer"></i> Print
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Reports
    </a>
</div>
