@* Views/Reports/HazriReport.cshtml - Hazri (Attendance) Report *@
@{
    ViewData["Title"] = "Hazri (Attendance) Report";
    var hazriRecords = ViewBag.HazriRecords as IEnumerable<VoucherManagementSystem.Models.Voucher>;
    var hazriSummary = ViewBag.HazriSummary as IEnumerable<dynamic>;
    var fromDate = (DateTime)ViewBag.FromDate;
    var toDate = (DateTime)ViewBag.ToDate;
    var totalHazri = (decimal)(ViewBag.TotalHazri ?? 0);
}

<div class="d-print-none">
    <h2><i class="bi bi-people-fill"></i> Hazri (Attendance) Report</h2>
    <p class="text-muted">View and analyze attendance/labor payments</p>
</div>

<!-- Filter Form -->
<div class="card mb-3 d-print-none">
    <div class="card-header bg-warning text-dark">
        <h5 class="mb-0"><i class="bi bi-filter"></i> Filter Options</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">From Date</label>
                <input type="date" name="fromDate" value="@fromDate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">To Date</label>
                <input type="date" name="toDate" value="@toDate.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Filter by Expense Head</label>
                @Html.DropDownList("expenseHeadId", ViewBag.ExpenseHeads as SelectList, "-- All Expense Heads --", new { @class = "form-select" })
            </div>
            <div class="col-md-3">
                <label class="form-label">Filter by Project</label>
                @Html.DropDownList("projectId", ViewBag.Projects as SelectList, "-- All Projects --", new { @class = "form-select" })
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-warning w-100">
                    <i class="bi bi-search"></i> Generate
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-3">
    <div class="col-md-4">
        <div class="card bg-warning text-dark">
            <div class="card-body text-center">
                <h6>Total Hazri Amount</h6>
                <h3>Rs. @string.Format("{0:N0}", totalHazri)</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h6>Total Transactions</h6>
                <h3>@(hazriRecords?.Count() ?? 0)</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h6>Expense Heads Used</h6>
                <h3>@(hazriSummary?.Count() ?? 0)</h3>
            </div>
        </div>
    </div>
</div>

<!-- Hazri Summary by Expense Head -->
@if (hazriSummary != null && hazriSummary.Any())
{
    <div class="card mb-3">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Hazri Summary by Expense Head</h5>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var summary in hazriSummary)
                {
                    decimal summaryTotal = Convert.ToDecimal(summary.Total);
                    var percentage = totalHazri > 0 ? (summaryTotal / totalHazri * 100) : 0;
                    <div class="col-md-4 mb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <span>@summary.ExpenseHead</span>
                            <span class="badge bg-warning text-dark">Rs. @string.Format("{0:N0}", summaryTotal)</span>
                        </div>
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar bg-warning" style="width: @percentage%"></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Hazri Records Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Hazri Details (@fromDate.ToString("dd-MMM-yyyy") to @toDate.ToString("dd-MMM-yyyy"))</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-sm" id="hazriTable">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Transaction No</th>
                        <th>Expense Head</th>
                        <th>Details</th>
                        <th>Project</th>
                        <th class="text-end">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @if (hazriRecords != null && hazriRecords.Any())
                    {
                        foreach (var h in hazriRecords)
                        {
                            <tr>
                                <td>@h.VoucherDate.ToString("dd-MMM-yy")</td>
                                <td>
                                    <a asp-controller="Vouchers" asp-action="Details" asp-route-id="@h.Id">@h.TransactionNumber</a>
                                </td>
                                <td>@h.ExpenseHead?.Name</td>
                                <td>@h.ExpenseHeadDetails</td>
                                <td>
                                    @if (h.ProjectId.HasValue)
                                    {
                                        <a asp-controller="Reports" asp-action="ProjectReport" asp-route-projectId="@h.ProjectId">@h.Project?.Name</a>
                                    }
                                </td>
                                <td class="text-end text-warning fw-bold">Rs. @string.Format("{0:N0}", h.Amount)</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">No hazri records found for the selected criteria.</td>
                        </tr>
                    }
                </tbody>
                @if (hazriRecords != null && hazriRecords.Any())
                {
                    <tfoot class="table-dark">
                        <tr>
                            <th colspan="5" class="text-end">Total:</th>
                            <th class="text-end">Rs. @string.Format("{0:N0}", totalHazri)</th>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>
    </div>
</div>

<div class="mt-3 d-print-none">
    <button onclick="window.print()" class="btn btn-primary">
        <i class="bi bi-printer"></i> Print
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Reports
    </a>
</div>
