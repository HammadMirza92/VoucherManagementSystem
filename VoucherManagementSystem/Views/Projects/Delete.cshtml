@* FIXED Views/Projects/Delete.cshtml *@
@model VoucherManagementSystem.Models.Project
@{
    ViewData["Title"] = "Delete Project";
}

<h2><i class="bi bi-trash"></i> Delete Project</h2>

<div class="alert alert-danger">
    <h4><i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this project?</h4>
    <p>This action will deactivate the project. Associated vouchers will be preserved.</p>
</div>

<div class="card">
    <div class="card-body">
        <h5>Project Details</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Description:</dt>
            <dd class="col-sm-9">@(Model.Description ?? "N/A")</dd>

            <dt class="col-sm-3">Start Date:</dt>
            <dd class="col-sm-9">@Model.StartDate.ToString("dd-MMM-yyyy")</dd>

            <dt class="col-sm-3">End Date:</dt>
            <dd class="col-sm-9">@(Model.EndDate?.ToString("dd-MMM-yyyy") ?? "Ongoing")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>