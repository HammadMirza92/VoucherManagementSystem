@* FIXED Views/Customers/Delete.cshtml *@
@model VoucherManagementSystem.Models.Customer
@{
    ViewData["Title"] = "Delete Customer";
}

<h2><i class="bi bi-trash"></i> Delete Customer</h2>

<div class="alert alert-danger">
    <h4><i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this customer?</h4>
    <p>This action will deactivate the customer. Associated vouchers will be preserved.</p>
</div>

<div class="card">
    <div class="card-body">
        <h5>Customer Details</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Phone:</dt>
            <dd class="col-sm-9">@(Model.Phone ?? "N/A")</dd>

            <dt class="col-sm-3">Address:</dt>
            <dd class="col-sm-9">@(Model.Address ?? "N/A")</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                    @(Model.IsActive ? "Active" : "Inactive")
                </span>
            </dd>

            <dt class="col-sm-3">Created Date:</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("dd-MMM-yyyy")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>