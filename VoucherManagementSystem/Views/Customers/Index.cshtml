@* Views/Customers/Index.cshtml *@
@model IEnumerable<VoucherManagementSystem.Models.Customer>
@{
    ViewData["Title"] = "Customers";
}

<h2><i class="bi bi-people"></i> Customers Management</h2>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6">
                <h5>Customer List</h5>
            </div>
            <div class="col-6 text-end">
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Add New Customer
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped" id="customersTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@(item.Phone ?? "N/A")</td>
                            <td>@(string.IsNullOrEmpty(item.Address) ? "N/A" : item.Address)</td>
                            <td>
                                <span class="badge bg-@(item.IsActive ? "success" : "danger")">
                                    @(item.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>@item.CreatedDate.ToString("dd-MMM-yyyy")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="ManageRates" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Manage Rates">
                                    <i class="bi bi-currency-rupee"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">No customers found. <a asp-action="Create">Create your first customer</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            if ($('#customersTable tbody tr').length > 1) {
                $('#customersTable').DataTable({
                    "order": [[0, "desc"]],
                    "pageLength": 10,
                    "columnDefs": [
                        { "orderable": false, "targets": 6 }
                    ]
                });
            }
        });
    </script>
}