@* FIXED Views/ExpenseHeads/Delete.cshtml *@
@model VoucherManagementSystem.Models.ExpenseHead
@{
    ViewData["Title"] = "Delete Expense Head";
}

<h2><i class="bi bi-trash"></i> Delete Expense Head</h2>

<div class="alert alert-danger">
    <h4><i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this expense head?</h4>
    <p>This action will deactivate the expense head. Associated expenses will be preserved.</p>
</div>

<div class="card">
    <div class="card-body">
        <h5>Expense Head Details</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Default Rate:</dt>
            <dd class="col-sm-9">Rs. @string.Format("{0:N0}", Model.DefaultRate)</dd>

            <dt class="col-sm-3">Notes:</dt>
            <dd class="col-sm-9">@(Model.Notes ?? "N/A")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>