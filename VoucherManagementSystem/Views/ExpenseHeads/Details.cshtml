@* Views/ExpenseHeads/Details.cshtml *@
@model VoucherManagementSystem.Models.ExpenseHead
@{
    ViewData["Title"] = "Expense Head Details";
}

<h2><i class="bi bi-wallet2"></i> Expense Head Details</h2>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5>@Model.Name</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Default Rate:</dt>
            <dd class="col-sm-9">Rs. @string.Format("{0:N0}", Model.DefaultRate)</dd>

            <dt class="col-sm-3">Notes:</dt>
            <dd class="col-sm-9">@Model.Notes</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                    @(Model.IsActive ? "Active" : "Inactive")
                </span>
            </dd>

            <dt class="col-sm-3">Created Date:</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("dd-MMM-yyyy")</dd>
        </dl>

        @if (ViewBag.Expenses != null)
        {
            <h5 class="mt-4">Recent Expenses</h5>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Transaction No</th>
                        <th>Amount</th>
                        <th>Project</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in ViewBag.Expenses)
                    {
                        <tr>
                            <td>@expense.VoucherDate.ToString("dd-MMM-yyyy")</td>
                            <td>@expense.TransactionNumber</td>
                            <td>@string.Format("{0:N0}", expense.Amount)</td>
                            <td>@expense.Project?.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <hr />

        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
