@* Views/ExpenseHeads/Create.cshtml *@
@model VoucherManagementSystem.Models.ExpenseHead
@{
    ViewData["Title"] = "Create Expense Head";
}

<h2><i class="bi bi-plus-circle"></i> Create New Expense Head</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label">Expense Head Name</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DefaultRate" class="form-label">Default Rate</label>
                    <input asp-for="DefaultRate" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="DefaultRate" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Notes" class="form-label">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                    <label asp-for="IsActive" class="form-check-label">
                        Active
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Create Expense Head
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}