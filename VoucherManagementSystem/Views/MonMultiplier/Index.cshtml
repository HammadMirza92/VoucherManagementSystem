@model IEnumerable<VoucherManagementSystem.Models.MonMultiplier>
@{
    ViewData["Title"] = "Mon Multiplier Settings";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h4><i class="bi bi-calculator"></i> Mon Multiplier Settings</h4>
        <small class="text-muted">Configure the Mon multiplication factor used in quantity calculation per voucher type.</small>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-dark text-white">
        <h6 class="mb-0"><i class="bi bi-list-ul"></i> Configured Multipliers</h6>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover table-sm mb-0">
            <thead class="table-light">
                <tr>
                    <th>Voucher Type</th>
                    <th class="text-center">Multiplier</th>
                    <th>Description</th>
                    <th class="text-center">Active</th>
                    <th>Last Updated</th>
                    <th>Updated By</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><span class="badge bg-primary fs-6">@item.VoucherType</span></td>
                        <td class="text-center fw-bold fs-5 text-success">@item.Multiplier</td>
                        <td class="text-muted">@(item.Description ?? "-")</td>
                        <td class="text-center">
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>@item.LastUpdated.ToString("dd-MMM-yyyy HH:mm")</td>
                        <td>@(item.UpdatedBy ?? "-")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Delete this multiplier?')">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted fst-italic py-4">
                            <i class="bi bi-info-circle"></i> No multipliers configured yet. The system will use the default value of <strong>40</strong>.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="card mt-3 border-info">
    <div class="card-body">
        <h6 class="text-info"><i class="bi bi-info-circle"></i> How it works</h6>
        <p class="mb-1 small">When a user enters a <strong>Mon</strong> value in the voucher form, the system multiplies it by the configured factor to calculate the <strong>Weight</strong>.</p>
        <p class="mb-1 small"><code>Weight = Mon Ã— Multiplier</code></p>
        <p class="mb-0 small text-muted">If no multiplier is configured for a voucher type, the default value of <strong>40</strong> is used.</p>
    </div>
</div>
