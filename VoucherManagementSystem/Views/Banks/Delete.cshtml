@* FIXED Views/Banks/Delete.cshtml *@
@model VoucherManagementSystem.Models.Bank
@{
    ViewData["Title"] = "Delete Bank";
}

<h2><i class="bi bi-trash"></i> Delete Bank</h2>

<div class="alert alert-danger">
    <h4><i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this bank?</h4>
    <p>This action will deactivate the bank. Associated transactions will be preserved.</p>
    @if (Model.Balance > 0)
    {
        <p class="mb-0"><strong>Warning:</strong> This bank has a balance of Rs. @string.Format("{0:N0}", Model.Balance)!</p>
    }
</div>

<div class="card">
    <div class="card-body">
        <h5>Bank Details</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Account Number:</dt>
            <dd class="col-sm-9">@(Model.AccountNumber ?? "N/A")</dd>

            <dt class="col-sm-3">Balance:</dt>
            <dd class="col-sm-9">Rs. @string.Format("{0:N0}", Model.Balance)</dd>

            <dt class="col-sm-3">Details:</dt>
            <dd class="col-sm-9">@(Model.Details ?? "N/A")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>