@* Views/Banks/Index.cshtml *@
@model IEnumerable<VoucherManagementSystem.Models.Bank>
@{
    ViewData["Title"] = "Banks";
}

<h2><i class="bi bi-bank"></i> Banks Management</h2>

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6">
                <h5>Bank List</h5>
            </div>
            <div class="col-6 text-end">
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Add New Bank
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped" id="banksTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Account Number</th>
                    <th>Balance</th>
                    <th>Details</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.AccountNumber</td>
                        <td>@string.Format("{0:N0}", item.Balance)</td>
                        <td>@item.Details</td>
                        <td>
                            <span class="badge bg-@(item.IsActive ? "success" : "danger")">
                                @(item.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#banksTable').DataTable();
        });
    </script>
}