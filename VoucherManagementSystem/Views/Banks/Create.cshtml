@* Views/Banks/Create.cshtml *@
@model VoucherManagementSystem.Models.Bank
@{
    ViewData["Title"] = "Create Bank";
}

<h2><i class="bi bi-bank"></i> Create New Bank</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Create">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label">Bank Name</label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="AccountNumber" class="form-label">Account Number</label>
                    <input asp-for="AccountNumber" class="form-control" />
                    <span asp-validation-for="AccountNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Balance" class="form-label">Initial Balance</label>
                    <input asp-for="Balance" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="Balance" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Details" class="form-label">Details</label>
                    <textarea asp-for="Details" class="form-control" rows="1"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                    <label asp-for="IsActive" class="form-check-label">
                        Active
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-circle"></i> Create Bank
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
