@model IEnumerable<VoucherManagementSystem.Models.User>
@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2></h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus"></i> Add New User
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="usersTable">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Last Login</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td><strong>@user.Username</strong></td>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.Phone</td>
                            <td>
                                <span class="badge bg-@(user.Role == "Admin" ? "danger" : "primary")">
                                    @user.Role
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-@(user.IsActive ? "success" : "secondary")" id="status_@user.Id">
                                    @(user.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                @if (user.LastLoginDate.HasValue)
                                {
                                    <small>@user.LastLoginDate.Value.ToString("dd-MMM-yyyy hh:mm tt")</small>
                                }
                                else
                                {
                                    <small class="text-muted">Never</small>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-info reset-password-btn"
                                            data-id="@user.Id"
                                            data-username="@user.Username"
                                            title="Reset Password">
                                        <i class="bi bi-key"></i>
                                    </button>
                                    @if (user.Id.ToString() != Context.Session.GetString("UserId"))
                                    {
                                        <button type="button"
                                                class="btn btn-sm btn-@(user.IsActive ? "secondary" : "success") toggle-status-btn"
                                                data-id="@user.Id"
                                                title="@(user.IsActive ? "Deactivate" : "Activate")">
                                            <i class="bi bi-@(user.IsActive ? "x-circle" : "check-circle")"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Reset Password Modal -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title"><i class="bi bi-key"></i> Reset Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Reset password for user: <strong id="resetUsername"></strong></p>
                <input type="hidden" id="resetUserId">
                <div class="mb-3">
                    <label class="form-label">New Password</label>
                    <input type="text" class="form-control" id="resetNewPassword" placeholder="Enter new password">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-info" id="confirmReset">Reset Password</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable({
                "pageLength": 25,
                "order": [[6, "desc"]]
            });

            // Reset password
            $('.reset-password-btn').on('click', function() {
                var userId = $(this).data('id');
                var username = $(this).data('username');

                $('#resetUserId').val(userId);
                $('#resetUsername').text(username);
                $('#resetNewPassword').val('');

                var modal = new bootstrap.Modal(document.getElementById('resetPasswordModal'));
                modal.show();
            });

            $('#confirmReset').on('click', function() {
                var userId = $('#resetUserId').val();
                var newPassword = $('#resetNewPassword').val();

                if (!newPassword) {
                    alert('Please enter a new password');
                    return;
                }

                $.ajax({
                    url: '@Url.Action("ResetPassword")',
                    type: 'POST',
                    data: {
                        userId: userId,
                        newPassword: newPassword
                    },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            $('#resetPasswordModal').modal('hide');
                        } else {
                            alert('Error: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('Error resetting password');
                    }
                });
            });

            // Toggle status
            $('.toggle-status-btn').on('click', function() {
                var userId = $(this).data('id');
                var btn = $(this);

                if (confirm('Are you sure you want to change this user\'s status?')) {
                    $.ajax({
                        url: '@Url.Action("ToggleStatus")',
                        type: 'POST',
                        data: { id: userId },
                        success: function(response) {
                            if (response.success) {
                                var statusBadge = $('#status_' + userId);
                                if (response.isActive) {
                                    statusBadge.removeClass('bg-secondary').addClass('bg-success').text('Active');
                                    btn.removeClass('btn-success').addClass('btn-secondary')
                                        .attr('title', 'Deactivate')
                                        .html('<i class="bi bi-x-circle"></i>');
                                } else {
                                    statusBadge.removeClass('bg-success').addClass('bg-secondary').text('Inactive');
                                    btn.removeClass('btn-secondary').addClass('btn-success')
                                        .attr('title', 'Activate')
                                        .html('<i class="bi bi-check-circle"></i>');
                                }
                            } else {
                                alert('Error: ' + response.message);
                            }
                        },
                        error: function() {
                            alert('Error updating status');
                        }
                    });
                }
            });
        });
    </script>
}
